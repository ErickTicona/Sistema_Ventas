<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <TextView
                android:id="@+id/RICTVNombre"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@string/nombre_cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            
            <LinearLayout
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <ImageView
                    android:id="@+id/RICIVDireccion"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_opt_item_dir"
                    android:layout_width="30dp"
                    android:layout_height="20dp"/>

                <ImageView
                    android:id="@+id/RICIVMail"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_opt_item_mail"
                    android:layout_width="30dp"
                    android:layout_height="20dp"/>

                <ImageView
                    android:id="@+id/RICIVTelefono"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_opt_item_tel"
                    android:layout_width="30dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>